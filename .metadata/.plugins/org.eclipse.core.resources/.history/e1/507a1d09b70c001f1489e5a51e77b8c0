package controle;

import java.util.Scanner;

public class WhileIndeterminado {
  
	public static void main(String[] args) {
	
		Scanner scan = new Scanner(Scanner.in);
		
		String valor = "";
		
		while(!valor.equalsIgnoreCase("sair")) {
			System.out.println("VocÃª diz: ");
			valor = scan.nextLine();
		}
		
		
		scan.close();
}

}
